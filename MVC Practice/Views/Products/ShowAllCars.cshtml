
@{
    ViewBag.Title = "ShowAllCars";
}

<h2>List of all Products</h2>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in @ViewBag.ProductList)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price$
            </td>
            <td>
                @Html.ActionLink("Details", "ShowCarDetails", new { id = item.ID })
            </td>
        </tr>
    }
</table>

